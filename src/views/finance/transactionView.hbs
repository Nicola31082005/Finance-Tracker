<div class="max-w-3xl mx-auto p-6 bg-gray-100 min-h-screen">
  <h1 class="text-3xl font-bold text-gray-800 text-center mb-6">Finance Tracker</h1>

  <!-- Form to Add Transactions -->
  <form action="/finance/add" method="POST" class="bg-white p-6 shadow-md rounded-lg">
    <div class="mb-4">
      <label class="block text-gray-700 font-bold">Type</label>
      <select name="type" class="w-full mt-1 p-2 border rounded">
        <option value="income">Income</option>
        <option value="expense">Expense</option>
      </select>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold">Amount ($)</label>
      <input type="number" name="amount" required class="w-full mt-1 p-2 border rounded">
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold">Category</label>
      <input type="text" name="category" required class="w-full mt-1 p-2 border rounded">
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold">Description</label>
      <input type="text" name="description" class="w-full mt-1 p-2 border rounded">
    </div>

    <button type="submit"
      class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded-lg">
      Add Transaction
    </button>
  </form>

  <!-- Transaction List -->
  <h2 class="text-2xl font-bold text-gray-800 mt-8">Transaction History</h2>
  <div class="bg-white shadow-md rounded-lg p-4 mt-4">
    {{#each transactions}}
      <div class="flex justify-between items-center p-3 border-b">
        <div>
          <p class="font-semibold text-lg">{{category}}</p>
          <p class="text-gray-600 text-sm">{{description}}</p>
          <p class="text-gray-500 text-sm">{{date}}</p>
        </div>
        <p class="text-lg font-bold {{#if (eq type 'income')}}text-green-600{{else}}text-red-600{{/if}}">
          ${{amount}}
        </p>
        <form action="/finance/delete/{{id}}" method="POST">
          <button class="text-red-500 hover:text-red-700">Delete</button>
        </form>
      </div>
    {{/each}}
  </div>
</div>
